<div class="container container-table">
    <div class="row vertical-center-row">
        <div class="text-center col-md-4 col-md-offset-4">
          
          <h1>Signup!</h1>

          <%= form_for :user, :html => { :class => 'form-horizontal' }, url: users_path do |f| %>
          
            <div class="form-group">
              <%= f.label :name, :class => 'control-label col-sm-3' %>
              <div class="col-sm-9">
                <%= f.text_field :name, :class => 'form-control' %>
              </div>
            </div>
          
            <div class="form-group">
              <%= f.label :email, :class => 'control-label col-sm-3' %>
              <div class="col-sm-9">
                <%= f.text_field :email, :class => 'form-control' %>
              </div>
            </div>
            
            <div class="form-group">
              <%= f.label :password, :class => 'control-label col-sm-3' %>
              <div class="col-sm-9">
                <%= f.password_field :password, :class => 'form-control' %>
              </div>
            </div>
            
            <div class="form-group">
              <%= f.label :password_confirmation, :class => 'control-label col-sm-3' %>
              <div class="col-sm-9">
                <%= f.password_field :password_confirmation, :class => 'form-control' %>
              </div>
            </div>
            
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit 'Submit', :class=> 'btn btn-default' %>
              </div>
            </div>
          <% end %>  
          
        <% if params["error"]%>
          <h1>Passwords doesnt match</h1>
        <% end %>
        
        </div>
    </div>
</div>

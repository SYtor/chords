<h1>Last Updates</h1>
<% @list.each do |i| %>
  <p>
    <% u = i.user %>
    <a href="user_path(i.id)">
      <%= u.name %>
    </a>
    
    <%= i.updated_at==i.created_at ? "created" : "updated" %>
    <%= i.author==0 ? "artist" : "chord" %>
    
    <a href="<%= i.author==0 ? artist_path(i.id) : chord_path(i.id) %>">
      <%= i.title %>
    </a>
  </p>
<% end %>

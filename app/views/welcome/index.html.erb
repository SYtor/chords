<div class="row">
  <div class="col-md-6">
    <h1>Last Added</h1>
    <% @updates.each do |i| %>
      <p>
        <% u = i.user %>
        <a href="user_path(i.id)">
          <%= u.name %>
        </a>
        
        added
        <%= i.author==0 ? "artist" : "chords" %>
        
        <a href="<%= i.author==0 ? artist_path(i.id) : chord_path(i.id) %>">
          <%= i.title %>
        </a>
      </p>
    <% end %>             
  </div>
  <div class="col-md-6">    
    <h1>Most popular</h1>
    <% @top.each do |i| %>
      <p>        
        <a href="<%= i.author==0 ? artist_path(i.id) : chord_path(i.id) %>">
          <%= i.title %>
        </a>
      </p>
    <% end %> 
  </div>
</div>
